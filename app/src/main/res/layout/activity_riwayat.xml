<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Riwayat"
    android:background="@drawable/gradasi">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/baseline_back"
       android:layout_marginTop="25dp"
       android:layout_marginLeft="20dp"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="40dp"
       android:text="Riwayat Laporan Anda"
       android:textSize="20sp"
       android:fontFamily="monospace"
       android:textColor="@color/black"/>

   <HorizontalScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:orientation="horizontal">

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="70dp"
             android:layout_marginLeft="5dp"
             android:text="Semua"
             android:textSize="16sp"
             android:fontFamily="serif-monospace"/>

         <Button
             android:id="@+id/Rwtmenunggu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="70dp"
             android:layout_marginLeft="5dp"
             android:text="Menunggu"
             android:textSize="16sp"
             android:fontFamily="serif-monospace"/>

         <Button
             android:id="@+id/Rwtproses"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="70dp"
             android:layout_marginLeft="5dp"
             android:text="Diproses"
             android:textSize="16sp"
             android:fontFamily="serif-monospace"/>

         <Button
             android:id="@+id/Rwtditerima"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="70dp"
             android:layout_marginLeft="5dp"
             android:text="Diterima"
             android:textSize="16sp"
             android:fontFamily="serif-monospace"/>
      </LinearLayout>
   </HorizontalScrollView>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="115dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/white"
             app:cardCornerRadius="10dp"
             app:cardElevation="5dp"
             app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laporan Wanita"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:background="#746363"
                android:padding="8dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pelecehan Seksual"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="35dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22 Oktober 2023"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:layout_marginTop="55dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Ahmad Yani 202, Sumatra Utara "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:layout_marginTop="75dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menunggu"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="220dp"/>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/white"
             app:cardCornerRadius="10dp"
             app:cardElevation="5dp"
             app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laporan Umum"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:background="#746363"
                android:padding="8dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fisik atau Psikis"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 September 2023"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:layout_marginTop="70dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Raden Patah 202, Sulawesi Utara "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:layout_marginTop="90dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dalam Proses"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="170dp"/>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/white"
             app:cardCornerRadius="10dp"
             app:cardElevation="5dp"
             app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laporan Umum"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:background="#746363"
                android:padding="8dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fisik atau Psikis"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 September 2021"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:layout_marginTop="70dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Ahmad Yani 202 Sumatera Utara"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:layout_marginTop="90dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laporan Diterima"
                android:textSize="18sp"
                android:textColor="#24FF00"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="125dp"/>
         </androidx.cardview.widget.CardView>

      </LinearLayout>
   </ScrollView>
</RelativeLayout>